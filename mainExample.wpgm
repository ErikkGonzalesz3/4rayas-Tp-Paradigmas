import wollok.game.*
import tablero.* 
import logica.*

program cuatroEnRaya {
	game.title("4 en Raya")
	game.width(25)
	game.height(15)

	tablero.iniciarTablero()
	logica.iniciarLogica()
	// tablero.mostrarJugadaTest()
	(0..6).forEach {numero => keyboard.num(numero).onPressDo{logica.quiereJugar(numero) }}


	game.start()
}
